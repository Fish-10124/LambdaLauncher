<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="LambdaLauncher.Views.SetupWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:LambdaLauncher.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="480" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" Orientation="Horizontal" Spacing="20">
            <Border Width="100" Height="100" BorderBrush="LightGray" BorderThickness="2" />
            <TextBlock x:Uid="appTitle" VerticalAlignment="Center" Style="{ThemeResource TitleTextBlockStyle}" />
        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Vertical" Spacing="5">
            <TextBlock x:Uid="setupLanguageTitleText" Style="{ThemeResource TitleTextBlockStyle}" />
            <TextBlock x:Uid="setupLanguageDescriptionText" Foreground="{ThemeResource DescriptionTextForegroundBrush}" Style="{ThemeResource BodyTextBlockStyle}" />

            <ComboBox Margin="0,32,0,0" />
        </StackPanel>
    </Grid>
</Page>
