<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="LambdaLauncher.Views.DownloadInstance"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:animation="using:CommunityToolkit.WinUI.Animations"
      xmlns:behaviors="using:LambdaLauncher.Models.Behaviors"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:displays="using:LambdaLauncher.Models.Displays"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:labs="using:CommunityToolkit.WinUI.Controls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:usercontrols="using:LambdaLauncher.UserControls"
      NavigationCacheMode="Enabled"
      mc:Ignorable="d">

    <Page.Resources>

        <StackLayout x:Name="VersionEntriesLayout" Spacing="5" />

        <DataTemplate x:Key="VersionEntriesView" x:DataType="displays:SettingsCardDisplay">
            <Grid>
                <usercontrols:MySettingsCard x:Name="versionDisplayCard" Description="{x:Bind Description}" Header="{x:Bind Header}" Icon="{x:Bind Icon}" Tag="{x:Bind}">
                    <interactivity:Interaction.Behaviors>
                        <behaviors:AncestorBindingBehavior AncestorType="DownloadInstance" Binding="{Binding ViewModel.NavigateToDetailsCommand}" TargetPropertyName="Command" />
                    </interactivity:Interaction.Behaviors>
                </usercontrols:MySettingsCard>
            </Grid>

        </DataTemplate>
    </Page.Resources>

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="{StaticResource PageMargin}" Padding="{StaticResource ScrollAreaPadding}">
                <StackPanel Orientation="Vertical">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE71C;" Style="{StaticResource FontIconStyle}" />

                        <TextBlock x:Uid="versionFilter" Grid.Column="1" VerticalAlignment="Center" Foreground="{ThemeResource DescriptionTextForegroundBrush}" Style="{ThemeResource CaptionTextBlockStyle}" />

                        <ComboBox x:Name="filterComboBox" Grid.Column="2" Loaded="filterComboBox_Loaded" SelectedValue="{x:Bind ViewModel.SelectedFilterTag, Mode=TwoWay}" SelectedValuePath="Tag">
                            <ComboBoxItem x:Uid="versionFilterAll" Tag="all" />
                            <ComboBoxItem x:Uid="versionFilterRelease" Tag="release" />
                            <ComboBoxItem x:Uid="versionFilterSnapshot" Tag="snapshot" />
                            <ComboBoxItem x:Uid="versionFilterOldAlpha" Tag="old_alpha" />
                            <ComboBoxItem x:Uid="versionFilterOldBeta" Tag="old_beta" />
                            <ComboBoxItem x:Uid="versionFilterAprilFool" Tag="aprilfool" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock x:Uid="latestVersion" Padding="0,30,0,15" Style="{ThemeResource BodyStrongTextBlockStyle}" />

                        <ItemsRepeater x:Name="latestVersionsList" ItemTemplate="{StaticResource VersionEntriesView}" ItemsSource="{x:Bind ViewModel.LatestVersionDisplay, Mode=OneWay}" Layout="{StaticResource VersionEntriesLayout}" Visibility="{x:Bind ViewModel.IsInitializing, Mode=OneWay, Converter={StaticResource BoolToVisibilityInvertConverter}}">
                            <animation:Implicit.ShowAnimations>
                                <animation:TranslationAnimation From="0,30,0" To="0" Duration="0:0:0.3" />
                                <animation:OpacityAnimation Delay="0:0:0.1" To="1.0" Duration="0:0:0.3" />
                            </animation:Implicit.ShowAnimations>

                            <animation:Implicit.HideAnimations>
                                <animation:TranslationAnimation From="0" To="0,30,0" Duration="0:0:0.3" />
                                <animation:OpacityAnimation To="0.0" Duration="0:0:0.3" />
                            </animation:Implicit.HideAnimations>
                        </ItemsRepeater>

                        <StackPanel x:Name="loadingStackPanel1" Spacing="5" Visibility="{x:Bind ViewModel.IsInitializing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <animation:Implicit.ShowAnimations>
                                <animation:TranslationAnimation From="0,30,0" To="0" Duration="0:0:0.3" />
                                <animation:OpacityAnimation Delay="0:0:0.1" To="1.0" Duration="0:0:0.3" />
                            </animation:Implicit.ShowAnimations>

                            <animation:Implicit.HideAnimations>
                                <animation:TranslationAnimation From="0" To="0,30,0" Duration="0:0:0.3" />
                                <animation:OpacityAnimation To="0.0" Duration="0:0:0.3" />
                            </animation:Implicit.HideAnimations>

                            <labs:Shimmer Height="70" />
                            <labs:Shimmer Height="70" />
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Padding="0,30,0,15" Style="{ThemeResource BodyStrongTextBlockStyle}">
                        <Run x:Uid="allVersionHeader" />
                        <Run Text="(" />
                        <Run Text="{x:Bind ViewModel.VersionDisplay.Count, Mode=OneWay}" />
                        <Run Text=")" />
                    </TextBlock>
                </StackPanel>

                <Grid>
                    <StackPanel x:Name="loadingStackPanel2" Spacing="5" Visibility="{x:Bind ViewModel.IsInitializing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <animation:Implicit.ShowAnimations>
                            <animation:TranslationAnimation From="0,30,0" To="0" Duration="0:0:0.3" />
                            <animation:OpacityAnimation Delay="0:0:0.1" To="1.0" Duration="0:0:0.3" />
                        </animation:Implicit.ShowAnimations>

                        <animation:Implicit.HideAnimations>
                            <animation:TranslationAnimation From="0" To="0,30,0" Duration="0:0:0.3" />
                            <animation:OpacityAnimation To="0.0" Duration="0:0:0.3" />
                        </animation:Implicit.HideAnimations>

                        <labs:Shimmer Height="70" />
                        <labs:Shimmer Height="70" />
                        <labs:Shimmer Height="70" />
                        <labs:Shimmer Height="70" />
                        <labs:Shimmer Height="70" />
                    </StackPanel>

                    <ItemsRepeater ItemTemplate="{StaticResource VersionEntriesView}" ItemsSource="{x:Bind ViewModel.VersionDisplay, Mode=OneWay}" Visibility="{x:Bind ViewModel.IsFiltering, Mode=OneWay, Converter={StaticResource BoolToVisibilityInvertConverter}}">
                        <animation:Implicit.ShowAnimations>
                            <animation:TranslationAnimation From="0,30,0" To="0" Duration="0:0:0.3" />
                            <animation:OpacityAnimation Delay="0:0:0.1" To="1.0" Duration="0:0:0.3" />
                        </animation:Implicit.ShowAnimations>

                        <animation:Implicit.HideAnimations>
                            <animation:TranslationAnimation From="0" To="0,30,0" Duration="0:0:0.3" />
                            <animation:OpacityAnimation To="0.0" Duration="0:0:0.3" />
                        </animation:Implicit.HideAnimations>
                    </ItemsRepeater>
                </Grid>

            </StackPanel>
        </ScrollViewer>


        <ProgressBar x:Name="progressBar" VerticalAlignment="Bottom" IsIndeterminate="True" Visibility="{x:Bind ViewModel.IsFiltering, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
    </Grid>
</Page>