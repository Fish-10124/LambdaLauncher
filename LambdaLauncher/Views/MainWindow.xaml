<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="LambdaLauncher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="using:CommunityToolkit.WinUI"
        xmlns:usercontrols="using:LambdaLauncher.UserControls"
        Title="Lambda Launcher"
        mc:Ignorable="d">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TitleBar x:Name="appTitle" Title="{x:Bind AppWindow.Title}" Grid.Row="0" IsBackButtonVisible="True" />

        <NavigationView x:Name="navView" Grid.Row="1" IsBackButtonVisible="Collapsed"
                        PaneDisplayMode="LeftCompact" SelectedItem="{Binding ViewModel.selectedItem, Mode=TwoWay}" SelectionChanged="navView_SelectionChanged">
            <NavigationView.Resources>
                <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
                <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent" />
            </NavigationView.Resources>

            <NavigationView.MenuItems>

                <NavigationViewItem x:Name="navItemHome" x:Uid="navItemHome" Icon="Home" />
                <NavigationViewItem x:Name="navItemDownload" x:Uid="navItemDownload" Icon="Download" IsExpanded="True" SelectsOnInvoked="False">

                    <NavigationViewItem.MenuItems>

                        <NavigationViewItem x:Name="navItemDownloadInstance" x:Uid="navItemDownloadInstance" Icon="{ui:FontIcon Glyph=&#xF158;}" />
                        <NavigationViewItem x:Name="navItemDownloadMod" x:Uid="navItemDownloadMod" Icon="{ui:FontIcon Glyph=&#xEA86;}" />
                        <NavigationViewItem x:Name="navItemDownloadModPack" x:Uid="navItemDownloadModPack" Icon="{ui:FontIcon Glyph=&#xF012;}" />
                        <NavigationViewItem x:Name="navItemDownloadResourcePack" x:Uid="navItemDownloadResourcePack" Icon="{ui:FontIcon Glyph=&#xE91B;}" />
                        <NavigationViewItem x:Name="navItemDownloadShader" x:Uid="navItemDownloadShader" Icon="{ui:FontIcon Glyph=&#xE706;}" />
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>

                <NavigationViewItem x:Name="navItemInstances" x:Uid="navItemInstances" Icon="Library" />
                <NavigationViewItem x:Name="navItemMore" x:Uid="navItemMore" Icon="More" />
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem x:Name="navItemAccount" x:Uid="navItemAccount" />
            </NavigationView.FooterMenuItems>

            <NavigationView.Header>
                <Grid Padding="-20,-10,0,5">
                    <usercontrols:BreadcrumbsHeader x:Name="breadcrumbsHeader" Grid.Row="0" ItemClicked="breadcrumbsHeader_ItemClicked" />
                </Grid>
            </NavigationView.Header>

            <Frame x:Name="contentFrame" />
        </NavigationView>
    </Grid>
</Window>