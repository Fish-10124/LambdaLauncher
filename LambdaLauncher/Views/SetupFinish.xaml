<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="LambdaLauncher.Views.SetupFinish"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:LambdaLauncher.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      NavigationCacheMode="Enabled"
      mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="480" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" Orientation="Horizontal" Spacing="20">
            <FontIcon FontSize="80" Glyph="&#xE8FB;" />
            <StackPanel Orientation="Vertical" Spacing="5">
                <TextBlock x:Uid="setupFinishTitleText" VerticalAlignment="Center" Style="{ThemeResource TitleTextBlockStyle}" />
                <TextBlock x:Uid="setupFinishDescriptionText" Foreground="{ThemeResource DescriptionTextForegroundBrush}" Style="{ThemeResource BodyTextBlockStyle}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
