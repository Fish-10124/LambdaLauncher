<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="LambdaLauncher.Views.SetupAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:LambdaLauncher.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      NavigationCacheMode="Enabled"
      mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" MaxWidth="450" VerticalAlignment="Center" Orientation="Vertical" Spacing="5">
            <TextBlock x:Uid="setupAccountTitleText" Style="{ThemeResource TitleTextBlockStyle}" />
            <TextBlock x:Uid="setupAccountDescriptionText" Foreground="{ThemeResource DescriptionTextForegroundBrush}" Style="{ThemeResource BodyTextBlockStyle}" />

            <StackPanel Orientation="Vertical" Spacing="5">

                <Button MinWidth="100" Command="{x:Bind ViewModel.AddAccountCommand}" Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <FontIcon FontSize="15" Glyph="&#xE8FA;" />
                        <TextBlock x:Uid="setupAddAccountText" />
                    </StackPanel>
                </Button>

                <HyperlinkButton x:Uid="setupMinecraftOfficialButton" />

            </StackPanel>
        </StackPanel>

        <ListView x:Uid="setupList" Grid.Column="1" VerticalAlignment="Center">

        </ListView>
    </Grid>
</Page>
