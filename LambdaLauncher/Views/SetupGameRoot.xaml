<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="LambdaLauncher.Views.SetupGameRoot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:displays="using:LambdaLauncher.Models.Displays"
      xmlns:local="using:LambdaLauncher.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      NavigationCacheMode="Enabled"
      mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="RootFolderListTemplate" x:DataType="displays:FolderDisplay">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <FontIcon Glyph="&#xED43;" />
                <StackPanel Orientation="Vertical">
                    <TextBlock Style="{ThemeResource BodyTextBlockStyle}" Text="{x:Bind FolderName}" />
                    <TextBlock Foreground="{ThemeResource DescriptionTextForegroundBrush}" Style="{ThemeResource CaptionTextBlockStyle}" Text="{x:Bind FullPath}" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" MaxWidth="450" VerticalAlignment="Center" Orientation="Vertical" Spacing="5">
            <TextBlock x:Uid="setupGameRootTitleText" Style="{ThemeResource TitleTextBlockStyle}" />
            <TextBlock x:Uid="setupGameRootDescriptionText" Foreground="{ThemeResource DescriptionTextForegroundBrush}" Style="{ThemeResource BodyTextBlockStyle}" />

            <StackPanel Orientation="Horizontal" Spacing="5">

                <Button MinWidth="100" Command="{x:Bind ViewModel.AddDefaultFolderCommand}" Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <FontIcon FontSize="15" Glyph="&#xE710;" />
                        <TextBlock x:Uid="setupAddDefaultFolderText" />
                    </StackPanel>
                </Button>

                <Button MinWidth="100" Command="{x:Bind ViewModel.SelectFolderCommand}" Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <FontIcon FontSize="15" Glyph="&#xED43;" />
                        <TextBlock x:Uid="setupSelectFolderText" />
                    </StackPanel>
                </Button>

            </StackPanel>
        </StackPanel>

        <ListView x:Uid="setupList" Grid.Column="1" VerticalAlignment="Center" ItemTemplate="{StaticResource RootFolderListTemplate}" ItemsSource="{x:Bind ViewModel.GameRootFolders, Mode=OneWay}" />


    </Grid>
</Page>
